<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<included>
	<property name="LOG_DATEFORMAT_PATTERN" value="HH:mm:ss.SSS"/>
	<property name="LOG_THREAD_PATTERN" value="%35thread"/>
	<property name="LOG_LOGGER_PATTERN" value="%logger"/>
	<property name="LOG_MDC_PATTERN" value="[%-10X{id:-unknown}]"/>
<!-- 	<property name="ROOT_LEVEL" value="DEBUG"/> -->

	<logger name="blogify" level="DEBUG"/>
	<!-- spring framework -->
	<logger name="org.springframework.boot" level="INFO"/>
	<logger name="org.springframework.core" level="INFO"/>
	<logger name="org.springframework.beans" level="INFO"/>
	<logger name="org.springframework.context" level="INFO"/>
	<logger name="org.springframework.aop" level="DEBUG"/>
	<logger name="org.springframework.web" level="DEBUG"/>
	<logger name="org.springframework.r2dbc" level="DEBUG"/>
	<!-- Netty -->
	<logger name="reactor.netty" level="INFO"/>
	<logger name="io.netty" level="INFO"/>
	<!-- JDBC -->
	<logger name="jdbc.sqltiming" level="INFO"/>
	<logger name="jdbc.resultsettable" level="INFO"/>
	<logger name="jdbc.connection" level="INFO"/>
	<!-- R2DBC -->
	<logger name="io.r2dbc" level="DEBUG"/>
